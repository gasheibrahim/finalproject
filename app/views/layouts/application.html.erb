    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <nav class="navbar sticky-top navbar-expand-lg navbar-light" style="background-color: #1b2a49;">
      <a class="navbar-brand" href="#" id="logo" >EMusicStore</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <% flash.each do |key, value| %>
            <%= content_tag(:div, value, class: "#{key}") %>
            <% end %>
            <% if current_user.try(:admin?) %>
            <li class="nav-item">
              <%= link_to "Administration", rails_admin_path, class:"nav-link", style:"color:white;" %>
            </li>
            <% end %>
            <% if logged_in? %>
            <li class="nav-item">
              <%= link_to "Products", products_path, class:"nav-link", style:"color:white;" %>
            </li>
            <li class="nav-item">
              <%= link_to "Profile", user_path(current_user.id), class:"nav-link", style:"color:white;" %>
            </li>
            <li class="nav-item">
              <%= link_to 'User list', users_path, class:"nav-link", style:"color:white;" %>
            </li>
            <li class="nav-item">
              <%= link_to "Logout", session_path(current_user.id), method: :delete, class:"nav-link", style:"color:white;" %>
            </li>
            <% else %>
            <li class="nav-item">
              <%= link_to 'Home', products_path,class:"nav-link", style:"color:#fff" %>
            </li>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="color: #fff;">
                OurProducts
              </a>
              <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <a class="dropdown-item" href="#">Piano</a>
                <a class="dropdown-item" href="#">Guitar</a>
                <a class="dropdown-item" href="#">Ukulele</a>
                <a class="dropdown-item" href="#">Saxophone</a>
                <a class="dropdown-item" href="#">Violin</a>
                <a class="dropdown-item" href="#">Trumpet</a>
                <a class="dropdown-item" href="#">Cello</a>
                <a class="dropdown-item" href="#">clarinet</a>
                <a class="dropdown-item" href="#">Accordion</a>
                <a class="dropdown-item" href="#">Acoustic guitar</a>
                <a class="dropdown-item" href="#">Electic guitar</a>
                <a class="dropdown-item" href="#">Flute</a>
                <a class="dropdown-item" href="#">Trombone</a>
                <a class="dropdown-item" href="#">Drum</a>
                <a class="dropdown-item" href="#">Xylophone</a>
                <a class="dropdown-item" href="#">Electronic Keyboard</a>
                <a class="dropdown-item" href="#">Bass guitar</a>
                <a class="dropdown-item" href="#">Oboe</a>
                <a class="dropdown-item" href="#">Harmonica</a>
                <a class="dropdown-item" href="#">Harp</a>
                <a class="dropdown-item" href="#">Mandolin</a>
                <a class="dropdown-item" href="#">Bassoon</a>
                <a class="dropdown-item" href="#">Viola</a>
                <a class="dropdown-item" href="#">French horn</a>
                <a class="dropdown-item" href="#">Tuba</a>
              </div>
            </li>
            <li class="nav-item">
              <%= link_to 'Register', new_user_path, class:"nav-link",style:"color:#fff" %>
            </li>
            <li class="nav-item">
              <%= link_to 'LogIn', new_session_path, class:"nav-link", style:"color:#fff" %>
            </li>
            </ul>
            <%= form_tag(products_path, method: :get, class:"form-inline my-2 my-lg-0") do %>
             <%= text_field_tag :search, params[:search], placeholder:'Search By Product Name Or Product Category', class:"form-control mr-sm-2" %>
             <%= submit_tag 'search', class:"btn btn-outline-success my-2 my-sm-0", name: nil %>
            <% end %>
            <% end %>
          </div>
        </nav><br>
        <div id="cart">
        <% if total_cart_items %>
          <%= link_to cart_path(@cart), class:"navbar-item button is-warning" do %>
          <span style="color:#fff;font-size: 30px;">
            <i class="fa fa-shopping-cart"></i>
          </span>
          <span style="color:#fff;font-size: 30px;">Cart
            <%= cart_count_over_one %>
          </span>
        <% end %>
        <% end %>
        </div>
<%= yield %>
