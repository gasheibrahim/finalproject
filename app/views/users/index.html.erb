<center>
<div class="card" style="background-color:#c9d1d3;">
<p id="notice"><%= notice %></p>
<div class="card-header text-center">
    Users List
</div>
<div class="card-body">
<p id="notice"><%= notice %></p>
<table>
  <thead>
    <tr>
      <th>Fullname</th>
      <th>Email</th>
      <th>Phonenumber</th>
      <th>Password</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.fullname %></td>
        <td><%= user.email %></td>
        <td><%= user.phonenumber %></td>
        <td><%= render 'follow_form', user: user, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
</div>
</div>
</center>